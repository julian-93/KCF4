<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kfc.julianalmanza.kfc.visualizacion_productos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brown"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/whitesmoke"
            android:id="@+id/titulo"
            android:typeface="serif"
            android:text="@string/megavariedad"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:textSize="15sp"
            android:background="@color/lightgray"
            android:id="@+id/descripcion"
            android:textColor="@color/black"
            android:text="@string/descripcion_megavariedad"
            />
        <ImageView
            android:layout_width="250sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:id="@+id/imagen"
            android:layout_marginTop="13sp"
            android:src="@drawable/kfc_mega_variedad"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Precio:"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/precio"

            />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="15sp"
            android:id="@+id/favorito_estrella"
            android:src="@drawable/estrella_blanca"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/brown"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textColor="@color/whitesmoke"
            android:id="@+id/volver"
            android:typeface="serif"
            android:text="@string/volver"
            />

    </LinearLayout>

</LinearLayout>
